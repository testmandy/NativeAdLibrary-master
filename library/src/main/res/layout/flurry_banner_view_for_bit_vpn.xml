<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_tracking_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2D3244">

    <ImageView
        android:id="@+id/native_main_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/native_main_image"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/native_main_image"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="123123123133333333333333333333333333"
        android:textColor="#FF9700"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/native_main_image"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:text="sdasdasdasdas"
        android:textColor="#D5D6D9"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/native_main_image"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/native_main_image" />

    <TextView
        android:id="@+id/call_to_action"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/native_main_image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:background="@drawable/ad_action_bg"
        android:gravity="center"
        android:minWidth="90dp"
        android:singleLine="true"
        android:text="123332"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/ad_starburst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ad"
            android:textColor="#008ef0"
            android:textSize="10dip" />

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@drawable/icon_ad" />
    </LinearLayout>

    <jp.shts.android.library.TriangleLabelView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        app:backgroundColor="#394266"
        app:corner="rightTop"
        app:labelBottomPadding="5dp"
        app:labelCenterPadding="0dp"
        app:labelTopPadding="6dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:primaryText="AD"
        app:primaryTextColor="#6C6F7C"
        app:primaryTextSize="9sp"
        app:secondaryTextSize="9sp" />

</RelativeLayout>