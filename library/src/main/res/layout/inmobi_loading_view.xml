<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ad_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/call_to_action"
        android:layout_toRightOf="@id/logo"
        android:ellipsize="end"
        android:maxEms="12"
        android:maxLines="1"
        android:text="3333333"
        android:textColor="#394266"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_alignLeft="@id/title"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/call_to_action"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:minLines="2"
        android:text="sdasdasdasdasdasd"
        android:textColor="#394266"
        android:textSize="12sp" />

    <RatingBar
        android:id="@+id/adRating"
        style="@style/foodRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="11dip"
        android:layout_below="@id/content"
        android:layout_alignLeft="@id/content"
        android:layout_marginBottom="15dp"
        android:numStars="5" />

    <Button
        android:id="@+id/call_to_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ad_action_bg"
        android:gravity="center"
        android:includeFontPadding="false"
        android:minWidth="40dp"
        android:minHeight="25dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:text="booknew"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/adSponsored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:text="Sponsored"
        android:textSize="12sp" />

    <FrameLayout
        android:id="@+id/adContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adRating"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />
</RelativeLayout>