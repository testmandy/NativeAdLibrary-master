<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ad_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f9f9f9"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/native_main_image"
        android:layout_width="382dp"
        android:layout_height="166dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="8dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/native_main_image"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/logo"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/logo"
        android:ellipsize="end"
        android:maxEms="12"
        android:text="333333333333333333333333333333333333"
        android:textColor="#333"
        android:maxLines="1"
        android:textSize="16sp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/logo"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="sdasdasdasd12111211212212111112121112asdasd"
        android:textColor="#666"
        android:textSize="12sp" />

    <FrameLayout
        android:id="@+id/call_to_action_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/call_to_action"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/ad_action_bg_for_video_offer"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:text="123332"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </FrameLayout>


    <TextView
        android:id="@+id/adSponsored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:text="Sponsored"
        android:textSize="12sp" />

    <jp.shts.android.library.TriangleLabelView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        app:backgroundColor="#C7C7C7"
        app:corner="rightTop"
        app:labelBottomPadding="5dp"
        app:labelCenterPadding="0dp"
        app:labelTopPadding="5dp"
        app:primaryText="AD"
        app:primaryTextColor="@color/white"
        app:primaryTextSize="9sp"
        app:secondaryTextSize="9sp" />

</RelativeLayout>