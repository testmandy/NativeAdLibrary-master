<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/ad_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:id="@+id/rl_icon"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_centerVertical="true">


            <ImageView
                android:id="@+id/logo"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="15dip"
                android:scaleType="centerCrop" />

            <com.google.android.gms.ads.formats.MediaView
                android:id="@+id/media_view"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dip"
                android:scaleType="centerCrop" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/ad_action_bg"
            android:paddingTop="4dp"
            android:paddingRight="5dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/call_to_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="123332"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ll_btn"
            android:layout_toRightOf="@id/rl_icon"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxEms="12"
                android:maxLines="1"
                android:text="1231231231231133333333333333333333333333333333333333333333333333333333333333333"
                android:textColor="#333333"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="sdasdasdasdasdasdsdwerewqweads"
                android:textColor="@color/hint_text_color"
                android:textSize="15dp" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/ad_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/black_transparent_70"
        android:gravity="center"
        android:minWidth="15dp"
        android:minHeight="15dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="Ad"
        android:textColor="@color/white"
        android:textSize="12dp" />

</RelativeLayout>