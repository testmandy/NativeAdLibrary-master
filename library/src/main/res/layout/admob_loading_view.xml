<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:minLines="2"
                android:paddingRight="20dp"
                android:text="contents hasiudhiu a b c d s r t hy  e w w d f g "
                android:textColor="@color/hint_text_color"
                android:textSize="15dp" />

        </LinearLayout>
    </LinearLayout>



    <com.google.android.gms.ads.formats.MediaView
        android:id="@+id/media_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/ad_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/black_transparent_70"
            android:gravity="center"
            android:minWidth="15dp"
            android:minHeight="15dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="Ad"
            android:textColor="@color/white"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/call_to_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/ad_action_bg"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:text="12333"
            android:textColor="@color/white"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/social"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/call_to_action"
            android:layout_toRightOf="@+id/ad_tag"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="social"
            android:textColor="#333"
            android:textSize="12dp" />

    </RelativeLayout>


</LinearLayout>