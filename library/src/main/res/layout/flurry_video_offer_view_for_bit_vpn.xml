<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_tracking_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f9f9f9"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/logo"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/logo"
        android:ellipsize="end"
        android:maxEms="12"
        android:maxLines="1"
        android:text="333333333333333333333333333333333333"
        android:textColor="#333"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/logo"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="sdasdasdasd12111211212212111112121112asdasd"
        android:textColor="#666"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/native_main_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/call_to_action"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/native_main_image"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ad_action_bg_for_video_offer"
        android:gravity="center"
        android:singleLine="true"
        android:text="123332"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/ad_starburst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ad"
            android:textColor="#008ef0"
            android:textSize="10dip" />

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:src="@drawable/icon_ad" />
    </LinearLayout>

    <jp.shts.android.library.TriangleLabelView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        app:backgroundColor="#C7C7C7"
        app:corner="rightTop"
        app:labelBottomPadding="5dp"
        app:labelCenterPadding="0dp"
        app:labelTopPadding="5dp"
        app:primaryText="AD"
        app:primaryTextColor="@color/white"
        app:primaryTextSize="9sp"
        app:secondaryTextSize="9sp" />

</RelativeLayout>