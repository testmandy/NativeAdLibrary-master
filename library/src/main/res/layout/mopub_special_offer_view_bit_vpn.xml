<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ad_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFECEC">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/logo"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/logo"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="123123123133333333333333333333333333"
        android:textColor="#FF9700"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/logo"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:text="sdasdasdasdas"
        android:textColor="#777E97"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_jiang_li"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/logo"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="+ 150MB"
        android:textColor="#1A6EE7"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/call_to_action"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/logo"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:background="@drawable/ad_action_bg"
        android:gravity="center"
        android:singleLine="true"
        android:text="123332"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/native_privacy_information_icon_image"
        android:layout_width="14dp"
        android:layout_height="14dp"
        tools:background="#ff0000" />

    <jp.shts.android.library.TriangleLabelView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        app:backgroundColor="#C7C7C7"
        app:corner="rightTop"
        app:labelBottomPadding="5dp"
        app:labelCenterPadding="0dp"
        app:labelTopPadding="6dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:primaryText="AD"
        app:primaryTextColor="@color/white"
        app:primaryTextSize="9sp"
        app:secondaryTextSize="9sp" />

</RelativeLayout>