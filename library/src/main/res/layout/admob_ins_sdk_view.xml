<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/rl_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dip"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <com.google.android.gms.ads.formats.MediaView
            android:id="@+id/media_view"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rl_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="12312312312313333333333333"
            android:textColor="#394266"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="3dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/call_to_action"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="sdasdasdasdasdasdsdwerewqweads"
                android:textColor="#394266"
                android:textSize="12sp" />

            <TextView
                android:id="@id/call_to_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ad_action_bg"
                android:gravity="center"
                android:minWidth="63dp"
                android:padding="5dp"
                android:singleLine="true"
                android:text="123332"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_reward_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:layout_below="@id/content"
                android:text="Download +"
                android:textColor="#394266"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_jiang_li"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/content"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/tv_reward_name"
                android:ellipsize="end"
                android:text="10 credits"
                android:textColor="#1891EB"
                android:textSize="12dp"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/ad_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/description"
        android:background="@color/black_transparent_70"
        android:minWidth="15dp"
        android:minHeight="15dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="Ad"
        android:textColor="@color/white"
        android:textSize="12sp" />
</RelativeLayout>


