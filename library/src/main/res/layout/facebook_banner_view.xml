<?xml version="1.0" encoding="utf-8"?>
<com.facebook.ads.NativeAdLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/native_ad_container"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:minHeight="100dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6F4FE"
        android:paddingStart="6dp"
        android:paddingLeft="6dp"
        android:paddingBottom="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="6dp">

            <com.facebook.ads.MediaView
                android:id="@+id/mv_media"
                android:layout_width="172dp"
                android:layout_height="90dp" />

            <LinearLayout
                android:id="@+id/ad_info_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/native_ad_sponsored_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="23dp"
                    android:layout_marginRight="23dp"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:textColor="#FF222222"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    tools:text="赞助内容" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="2"
                    android:textColor="#FF222222"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    tools:text="odortestxfodortestx" />

                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:textColor="#FF888888"
                    android:textSize="11dp"
                    tools:text="123456123456123456123456123456123456456123456123456456123456123456" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btn_install"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right|bottom"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ad_action_bg"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:paddingLeft="13dp"
                        android:paddingTop="4dp"
                        android:paddingRight="13dp"
                        android:paddingBottom="4dp"
                        android:text="booknew"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_ad_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:minWidth="15dp"
            android:minHeight="15dp" />


        <com.facebook.ads.AdIconView
            android:id="@+id/logo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/ad_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:background="#FF9C02"
            android:minHeight="0dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="AD" />

        <RelativeLayout
            android:id="@+id/rl_jiang_li_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:visibility="gone">

            <include layout="@layout/layout_ad_jiang_li_label" />

        </RelativeLayout>
    </RelativeLayout>
</com.facebook.ads.NativeAdLayout>